{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": [
      "node",
      "express",
      "express-fileupload",
      "compression",
      "cookie-parser",
      "express-session",
      "hpp",
      "jsonwebtoken"
    ]
  }
}
